{
  "author": "candleSmartHome.com",
  "content_scripts": [
    {
      "css": [
  		"css/extension_utils.css",
        "css/extension.css",
		"css/dashboard_logging.css"
      ],
      "js": [
		"js/gridstack.js",
		"js/d3.v7.min.js",
		"js/color-scheme.min.js",
        "js/extension.js"
      ]
    }
  ],
  "description": "Create a dashboard to gain quick insights into your home and control your favourite devices",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "extension",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/createcandle/dashboard",
  "id": "dashboard",
  "license": "",
  "manifest_version": 1,
  "name": "Dashboard",
  "options": {
    "default": {
	  "Start with Dashboard": false,
	  "Hide animations": false,
      "Debugging": false
    },
    "schema": {
      "properties": {
  		"Start with Dashboard": {
            "description": "Immediately show the dashboard instead of the things overview.",
            "type": "boolean"
        },
  		"Hide animations": {
            "description": "If you don't like things like rain animations in the weather widget, you can disable these flourishes here.",
            "type": "boolean"
        },
        "Debugging": {
          "description": "Advanced. Enable this to see much more detail in the internal log about what this add-on is doing.",
          "type": "boolean"
        }
      },
      "required": [],
      "type": "object"
    }
  },
  "short_name": "Dashboard",
  "version": "0.2.7",
  "web_accessible_resources": [
    "css/*.css",
	"icons/*.svg",
	"icons/*/*.svg",
	"icons/*/*/*.svg",
    "images/*.svg",
	"images/*.png",
    "js/*.js",
    "views/*.html"
  ]
}
