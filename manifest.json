{
  "author": "candleSmartHome.com",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js",
		"js/gridstack.js",
		"js/d3.v7.min.js"
      ]
    }
  ],
  "description": "Create a dashboard to gain quick insights into your home and control your favourite devices",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "extension",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/createcandle/dashboard",
  "id": "dashboard",
  "license": "",
  "manifest_version": 1,
  "name": "Dashboard",
  "options": {
    "default": {
	  "Black and white": false,
	  "Background color": "",
      "Debugging": false
    },
    "schema": {
      "properties": {
		"Black and white": {
          "description": "Show everything in black and white.",
          "type": "boolean"
        },
		"Background color": {
          "description": "If you choose your own dashboard background color, pick one that works for both light and dark text.",
          "type": "text"
        },
        "Debugging": {
          "description": "Advanced. Enable this to see much more detail in the internal log about what this add-on is doing.",
          "type": "boolean"
        }
      },
      "required": [],
      "type": "object"
    }
  },
  "short_name": "Dashboard",
  "version": "0.0.2",
  "web_accessible_resources": [
    "css/*.css",
	"icons/*.svg",
	"icons/*/*.svg",
	"icons/*/*/*.svg",
    "images/*.svg",
	"images/*.png",
    "js/*.js",
    "views/*.html"
  ]
}
